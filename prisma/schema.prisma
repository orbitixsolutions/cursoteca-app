generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUMS //

enum ROLES {
  DIRECTIVE
  ADMIN
  STUDENT
  USER
}

enum ECAS {
  LOS_PINOS
}

// USER TABLE //

model User {
  id       String @id @default(cuid()) 
  email    String @unique
  password String
  name     String
  role     ROLES  @default(USER)
  eca_id   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
